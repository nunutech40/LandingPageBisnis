---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import StickyWA from '../components/StickyWA.astro';
import RenovationCalculator from '../components/RenovationCalculator.astro';
import ServiceCard from '../components/ServiceCard.astro';
import PerformanceBadge from '../components/PerformanceBadge.astro';
import FAQ from '../components/FAQ.astro';
---

<Layout title="Jasa Landing Page High-Performance | ConversionEngine">
	<main>
    <Hero />

    <!-- DEMO SECTION -->
    <section id="calculator" class="w-full max-w-5xl mx-auto px-6 py-24 scroll-mt-20">
      <div class="text-center mb-16">
        <span class="bg-blue-50 text-primary text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wide">Technology Demo</span>
        <h2 class="text-3xl md:text-4xl font-bold text-dark mt-4 mb-4">"Mesin Penjual" Otomatis</h2>
        <p class="text-gray-500 max-w-2xl mx-auto text-lg">
          Jangan biarkan pengunjung pergi karena ragu soal harga. <br>
          Beri mereka alat estimasi, tangkap datanya, dan biarkan mereka menghubungi Anda.
        </p>
      </div>
      
      <RenovationCalculator />
    </section>

    <!-- PRICING SECTION -->
    <ServiceCard />

    <!-- FAQ SECTION -->
    <FAQ />

    <!-- Floating Action -->
    <StickyWA />
    <PerformanceBadge />
	</main>
</Layout>
